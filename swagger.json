{
  "swagger": "2.0",
  "info": {
    "title": "Students Api",
    "description": "Students Api",
    "version": "1.0.0"
  },
  "host": "localhost:3001",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/students/": {
      "get": {
        "tags": ["Students"],
        "description": "Get all students",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": ["Students"],
        "description": "Create a new student",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "John Doe"
                },
                "email": {
                  "example": "john.doe@example.com"
                },
                "age": {
                  "example": 22
                },
                "major": {
                  "example": "Computer Science"
                },
                "graduationYear": {
                  "example": 2024
                },
                "GPA": {
                  "example": 3.5
                },
                "attendanceMode": {
                  "example": "in-person"
                },
                "courses": {
                  "example": ["CS101", "CS102"]
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/students/{id}": {
      "get": {
        "tags": ["Students"],
        "description": "Get a student by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": ["Students"],
        "description": "Update a student's information",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "John Doe Updated"
                },
                "email": {
                  "example": "john.doe.updated@example.com"
                },
                "age": {
                  "example": 23
                },
                "major": {
                  "example": "Data Science"
                },
                "graduationYear": {
                  "example": 2025
                },
                "GPA": {
                  "example": 3.8
                },
                "attendanceMode": {
                  "example": "hybrid"
                },
                "courses": {
                  "example": ["CS101", "DS101"]
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Students"],
        "description": "Delete a student",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/courses/": {
      "get": {
        "tags": ["Courses"],
        "description": "Get all courses",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": ["Courses"],
        "description": "Create a new course",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "courseCode": {
                  "example": "CS101"
                },
                "courseName": {
                  "example": "Introduction to Computer Science"
                },
                "instructor": {
                  "example": "Dr. Smith"
                },
                "semester": {
                  "example": "Fall 2024"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/courses/{id}": {
      "get": {
        "tags": ["Courses"],
        "description": "Get course by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": ["Courses"],
        "description": "Update a course's information",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "courseCode": {
                  "example": "CS102"
                },
                "courseName": {
                  "example": "Advanced Computer Science"
                },
                "instructor": {
                  "example": "Dr. Johnson"
                },
                "semester": {
                  "example": "Spring 2025"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": ["Courses"],
        "description": "Delete a course",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}