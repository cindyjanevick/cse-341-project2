{
  "swagger": "2.0",
  "info": {
    "title": "Students Api",
    "description": "API for managing students and courses",
    "version": "1.0.0"
  },
  "host": "localhost:3001",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/students/": {
      "get": {
        "tags": ["Students"],
        "description": "Get all students",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": ["Students"],
        "description": "Create a new student",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "John Doe" },
                "email": { "type": "string", "example": "john.doe@example.com" },
                "age": { "type": "integer", "example": 22 },
                "major": { "type": "string", "example": "Computer Science" },
                "graduationYear": { "type": "integer", "example": 2024 },
                "GPA": { "type": "number", "example": 3.5 },
                "attendanceMode": { "type": "string", "example": "in-person" },
                "courses": { "type": "array", "items": { "type": "string" }, "example": ["CS101", "CS102"] }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/students/{id}": {
      "get": {
        "tags": ["Students"],
        "description": "Get a student by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Student Not Found" }
        }
      },
      "put": {
        "tags": ["Students"],
        "description": "Update a student's information",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "example": "John Doe Updated" },
                "email": { "type": "string", "example": "john.doe.updated@example.com" },
                "age": { "type": "integer", "example": 23 },
                "major": { "type": "string", "example": "Data Science" },
                "graduationYear": { "type": "integer", "example": 2025 },
                "GPA": { "type": "number", "example": 3.8 },
                "attendanceMode": { "type": "string", "example": "hybrid" },
                "courses": { "type": "array", "items": { "type": "string" }, "example": ["CS101", "DS101"] }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Student Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Students"],
        "description": "Delete a student",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/courses/": {
      "get": {
        "tags": ["Courses"],
        "description": "Get all courses",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "OK" }
        }
      },
      "post": {
        "tags": ["Courses"],
        "description": "Create a new course",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "courseCode": { "type": "string", "example": "CS101" },
                "courseName": { "type": "string", "example": "Introduction to Computer Science" },
                "instructor": { "type": "string", "example": "Dr. Smith" },
                "semester": { "type": "string", "example": "Fall 2024" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/courses/{id}": {
      "get": {
        "tags": ["Courses"],
        "description": "Get course by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Course Not Found" }
        }
      },
      "put": {
        "tags": ["Courses"],
        "description": "Update a course's information",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "courseCode": { "type": "string", "example": "CS102" },
                "courseName": { "type": "string", "example": "Advanced Computer Science" },
                "instructor": { "type": "string", "example": "Dr. Johnson" },
                "semester": { "type": "string", "example": "Spring 2025" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Course Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Courses"],
        "description": "Delete a course",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}
